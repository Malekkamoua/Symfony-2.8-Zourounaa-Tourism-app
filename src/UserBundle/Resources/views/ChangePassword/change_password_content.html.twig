{% extends "AdminBundle:Default:nav.html.twig" %}

{% block title %}Change Password{% endblock %}
{% block VariableContent %}

{% trans_default_domain 'FOSUserBundle' %}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        	<a href="{{ path('fos_user_profile_edit')}}">My profile</a> 
    </li>
    <li class="breadcrumb-item active">My plan</li>
</ol>
<div class="row">
    <div class="col-md-12">
        <div class="box_general padding_bottom">
            <div class="header_box version_2">
                <h2><i class="fa fa-lock"></i>Change password</h2>
            </div>

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_change_password'), 'attr': {'class': 'fos_user_change_password','id':'form-validate'}})
            }}
            <br>
            {{ form_widget(form.current_password,{'label':'Current password',
                    'attr':{'placeholder':'Current password','class':'form-control'}}) }}
            <br>

            {{ form_widget(form.plainPassword.first,{'label':'new Password',
                    'attr':{'placeholder':'new Password','class':'form-control'}}) }}
            <br>

            {{ form_widget(form.plainPassword.second,{'label':'Confirm new password',
                    'attr':{'placeholder':'Confirm new password','class':'form-control '}}) }}
            <br>
            <div>
                <input type="submit" class="btn btn-warning" value="{{ 'change_password.submit'|trans }}" />
            </div>
            {{ form_end(form) }}

            {% endblock %}
{% block javascripts %}
{% javascripts %} {{ parent() }} {% endjavascripts %}
{% endblock %}